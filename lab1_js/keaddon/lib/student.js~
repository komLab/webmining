var lang = require("language");
var util = require("utility");

var eng = [" the "," and "," is ", " be ", " he ", " she "];
var ger  = [" der "," die "," das "," und "," ist "];


function isLang( text, stopwords)
{
	var x=0;
	for (i=0;i<stopwords.length;i++)
  	{
  		x = text.indexOf(stopwords[i]);
  		console.log(stopwords[i],x);
  	}
  	console.log(text);
	return x;
}

function student(text) {
	if ( isLang(text,eng) > 0 ){
		return lang.english;
	}
	if ( isLang(text,ger) > 0 ){
		return lang.german;
	}
	return lang.french;
	
}

exports.student = student;
